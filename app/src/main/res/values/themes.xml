<resources>
    <!-- Base application theme. -->
    <style name="Theme.Ex20_AccessRestfulWebService" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
        <!--Set the style for the Actionbar-->
        <item name="toolbarStyle">@style/ToolBarStyle</item>
    </style>
    <!--Style for the custom Toolbar-->
    <style name="ToolBarStyle" parent="@style/Widget.Material3.Toolbar.Surface">
        <item name="titleTextColor">@color/white</item>
        <item name="materialThemeOverlay">@style/ToolbarThemeOverlay</item>
    </style>
    <!--ThemeOverlay for the custom Toolbar-->
    <style name="ToolbarThemeOverlay" parent="">
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>
    <!--Style for the CardView title-->
    <style name="CardTitleStyle" parent="">
        <item name="android:gravity">center</item>
        <item name="android:autoSizeMaxTextSize">48sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceTitleLarge</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Style for the CardView text-->
    <style name="CardTextStyle" parent="">
        <item name="android:gravity">center</item>
        <item name="android:autoSizeMaxTextSize">48sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeStepGranularity">2sp</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>
</resources>